<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ToggleButton">


    <TextView
        android:id="@+id/txtTitulo4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="100dp"
        android:text="@string/titulo"
        android:textColor="@color/design_default_color_primary"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editMetros4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="73dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="73dp"
        android:ems="10"
        android:hint="@string/cantidad"
        android:inputType="text"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTitulo4" />

    <ToggleButton
        android:id="@+id/tbPies"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="60dp"
        android:background="@drawable/tooggle_selector"
        android:text="@string/pies"
        android:textOff="@string/pies"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editMetros4" />

    <ToggleButton
        android:id="@+id/tbPulgadas"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp"
        android:background="@drawable/tooggle_selector"
        android:text="ToggleButton"
        android:textOff="@string/pulgadas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tbPies" />

    <ToggleButton
        android:id="@+id/tbYardas"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp"
        android:background="@drawable/tooggle_selector"
        android:text="ToggleButton"
        android:textOff="@string/yardas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tbPulgadas" />

    <ImageButton
        android:id="@+id/ibtnLimpiar5"
        android:layout_width="wrap_content"
        android:layout_height="63dp"
        android:layout_marginTop="38dp"
        android:layout_marginEnd="30dp"
        android:contentDescription="string"
        android:onClick="onClick4"
        app:layout_constraintEnd_toStartOf="@+id/ibtnMostrar5"
        app:layout_constraintTop_toBottomOf="@+id/tbYardas"
        app:srcCompat="@android:drawable/ic_menu_delete" />

    <ImageButton
        android:id="@+id/ibtnMostrar5"
        android:layout_width="wrap_content"
        android:layout_height="68dp"
        android:layout_marginTop="38dp"
        android:layout_marginEnd="1dp"
        android:contentDescription="string"
        android:onClick="onClick4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tbYardas"
        app:srcCompat="@android:drawable/ic_menu_gallery" />

    <ImageButton
        android:id="@+id/ibtnConvertir5"
        android:layout_width="wrap_content"
        android:layout_height="62dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="38dp"
        android:layout_marginEnd="30dp"
        android:contentDescription="string"
        android:onClick="onClick4"
        app:layout_constraintEnd_toStartOf="@+id/ibtnLimpiar5"
        app:layout_constraintStart_toStartOf="@id/editMetros4"
        app:layout_constraintTop_toBottomOf="@+id/tbYardas"
        tools:srcCompat="@android:drawable/ic_menu_save" />

    <TextView
        android:id="@+id/txtResultado4"
        android:layout_width="289dp"
        android:layout_height="115dp"
        android:layout_marginStart="46dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="46dp"
        android:text="@string/cantidadconvertir"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ibtnLimpiar5" />


</androidx.constraintlayout.widget.ConstraintLayout>